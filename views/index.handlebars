
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            <a class="btn btn-success" href="/list/new">新增餐廳</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container mt-3"> 
  <div class="row">
    <div class="col-12  mx-auto">
      <div class="card-group">
        {{#each lists}}
        <div class="col-md-4 col-sm-6 col-12">
          <a href="/list/{{this._id}}" class="text-secondary">
          <div class="card mb-4">
            <img class="card-img-top" src="{{this.image}}"
              alt="">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="badge bg-danger">
                <i class="fa-solid fa-thumbs-up"></i>
                {{this.rating}}
              </span>
              <div class="col-auto">
                <a href="/list/{{ this._id }}" class="btn btn-secondary">Detail</a>
                <a href="/list/{{ this._id }}/edit" class="btn btn-success">Edit</a>
                <form action="/list/{{ this._id }}?_method=delete" method="POST" style="display: inline;">
                    <button class="btn btn-danger" onclick="return confirmDelete()" type="submit">delete</button>
                  </form>
                  </div>
                </div>
               </div>
              </a>
            </div>
        {{/each}}
        </div>
      </div>
    </div>    
  </div>
</div>
